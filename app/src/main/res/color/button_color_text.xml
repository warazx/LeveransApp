<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button: Disabled -->
    <item
        android:state_enabled="false"
        android:color="@color/button_color_text_disabled" />

    <!-- Button: Pressed -->
    <item
        android:state_enabled="true"
        android:state_pressed="true"
        android:color="@color/button_color_text_pressed" />

    <!-- Button: Has Focus -->
    <item
        android:state_enabled="true"
        android:state_focused="true"
        android:color="@color/button_color_text_focus" />

    <!-- Button: Normal -->
    <item
        android:state_enabled="true"
        android:color="@color/button_color_text_normal" />
</selector>