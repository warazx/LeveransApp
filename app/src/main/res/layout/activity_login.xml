<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.iths.grupp1.leveransapp.view.LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:id="@+id/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/activity_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="@string/activity_login_login_label"
        android:id="@+id/activity_login_login_label" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_login_label"
        android:layout_centerHorizontal="true"
        android:text="@string/empty_string"
        android:id="@+id/activity_login_username_message" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_login_label"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:textSize="20sp"
        android:hint="@string/activity_login_username_hint"
        android:id="@+id/activity_login_username_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_username_value"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_login_password_message" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_username_value"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:inputType="textPassword"
        android:maxLength="15"
        android:textSize="20sp"
        android:hint="@string/activity_login_password_hint"
        android:id="@+id/activity_login_password_value" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="goToOrders"
        android:text="@string/activity_login_login_btn_label"
        android:id="@+id/activity_login_login_btn" />

    </RelativeLayout>

</RelativeLayout>
