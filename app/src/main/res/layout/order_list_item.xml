<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.iths.grupp1.leveransapp.view.OrderActivity"
    android:background="@drawable/order_list_item_background"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/order_item_orderID_label"
                    android:text="@string/order_list_item_orderID_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/order_list_item_text_color"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/order_item_orderID_value"
                    tools:text="23463"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/order_list_item_text_color" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/order_list_item_delivery_address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/order_list_item_text_color"
                    android:id="@+id/order_item_target_label" />

                <TextView
                    tools:text="Storgatan 10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/order_list_item_text_color"
                    android:id="@+id/order_item_delivery_address_value" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
