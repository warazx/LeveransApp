<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button: Disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="@dimen/button_default_radius" />
            <solid
                android:color="@color/button_default_color_disabled" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <size
                android:width="@dimen/button_default_width"
                android:height="@dimen/button_default_height" />
        </shape>
    </item>

    <!-- Button: Pressed -->
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="@dimen/button_default_radius" />
            <solid
                android:color="@color/button_default_color_pressed" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <size
                android:width="@dimen/button_default_width"
                android:height="@dimen/button_default_height" />
        </shape>
    </item>

    <!-- Button: Has Focus -->
    <item
        android:state_enabled="true"
        android:state_focused="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="@dimen/button_default_radius" />
            <solid
                android:color="@color/button_default_color_focus" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <size
                android:width="@dimen/button_default_width"
                android:height="@dimen/button_default_height" />
        </shape>
    </item>

    <!-- Button: Normal -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="@dimen/button_default_radius" />
            <solid
                android:color="@color/button_default_color_normal" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <size
                android:width="@dimen/button_default_width"
                android:height="@dimen/button_default_height" />
        </shape>
    </item>
</selector>